public class TreeOfStars
{
    public static void main(String[] args)
    {
       // Call makeATree 
       makeATree();
    }
    public static void makeATree()
    {
        // Your code goes here!!!
        int count = 10;
        for(int i = 1; i < 10; i++)
        {
            for(int j = 0; j < count; j++)
            {
                System.out.print(" ");
            }
            for(int k = 0; k < i; k++)
            {
                System.out.print("* ");
            }
            System.out.println();
            count--;
        }
    }
}
