public class CarTester {

    public static void main(String[] args) {
        
        // Create a car with 4000 miles and oil change and tires at 0
        Car toaster = new Car(4000, 0, 0);
        
        // Drive 500 miles
        toaster.drive(500);
        
        // Check when the next Oil change and tire rotation are due
        toaster.nextOilChange();
        toaster.nextTireRotation();
        // Change oil
        toaster.changeOil();
        
        // drive 6000 miles
        toaster.drive(6000);
        
        // Check if a tire rotation is needed
        toaster.needsTireRotation();
        
        // Rotate the tires.
        toaster.rotateTires();
    }
}
