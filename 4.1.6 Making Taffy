import java.util.Scanner;
public class Taffy
{
    public static void main(String[] args)
    {
       Scanner input = new Scanner(System.in);
       // Your code starts here
       //introduce taffy timer and variable temp for temperature in Celcius 
       System.out.println("Starting Taffy Timer...");
       int temp = 0;
       
       //while statement to run until temperature is 140
       while(temp < 130)
       {
           System.out.print("Enter the temperature: ");
           temp = input.nextInt();
           if(temp < 130)
           {
              System.out.println("The mixture isn't ready yet."); 
           }
           else
           {
               System.out.println("Your taffy is ready for the next step!");
               break;
           }
       }
    }
}
