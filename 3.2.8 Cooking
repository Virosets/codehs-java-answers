public class MicrowaveCooking
{
    public static void main(String[] args)
    {
       // Generate a random number of seconds
        int randomSec = (int)(Math.random()*(150+1) + 90);
       // Print the number of seconds
       System.out.println("Microwaving for " + randomSec + " seconds");
       // Use two if statements to print the temperature
       if(randomSec <= 120)
       {
           System.out.println("Rolls will be right temperature!");
       }
       if(randomSec > 120)
       {
           System.out.println("Rolls will be boiling hot!");
       }
       
    }
}
